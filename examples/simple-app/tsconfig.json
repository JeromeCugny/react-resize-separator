{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react",
    "rootDir": "./src",
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
}